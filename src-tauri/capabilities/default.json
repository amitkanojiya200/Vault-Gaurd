{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for the main window of the PRABAL application.",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "log:default",
    "fs:read-all", 
    "fs:write-all", 
    "shell:allow-open",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" } 
      ]
    }
  ]
}